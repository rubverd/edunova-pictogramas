<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f8f5f3">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E35F72"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Ordena la frase"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBarGame"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:progress="0"
        android:progressTint="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/game_content_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="cardPictogram,areaRespuesta,labelOpciones,chipGroupOpciones" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPictogram"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/progressBarGame"
        app:layout_constraintBottom_toTopOf="@id/guideline_image_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewPictogram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlaySound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:backgroundTint="#FFC107"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic_volume_up"
                app:fabSize="mini"
                app:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/areaRespuesta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_rounded_border_grey"
        android:minHeight="80dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/guideline_image_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupRespuesta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="false" />
    </LinearLayout>

    <TextView
        android:id="@+id/labelOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toca las palabras para ordenar:"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/areaRespuesta"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:chipSpacing="10dp"
        app:layout_constraintTop_toBottomOf="@id/labelOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonConfirm"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:text="CONFIRMAR"
        android:textColor="@color/black"
        android:backgroundTint="@color/rojoBoton"
        android:textSize="24sp"
        app:cornerRadius="16dp"
        android:visibility="invisible"
        app:icon="@drawable/ic_check"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="SIGUIENTE"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingStart="32dp"
        android:paddingEnd="24dp"
        android:elevation="8dp"
        android:stateListAnimator="@null"
        android:visibility="invisible"
        app:backgroundTint="@color/rojoBoton"
        app:cornerRadius="28dp"
        app:icon="@drawable/ic_next"
        app:iconGravity="textEnd"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_intermedio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f5f3"
        android:elevation="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTituloIntermedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Ahora vamos con los errores!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/rojoBoton"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/tvSubtituloIntermedio"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/tvSubtituloIntermedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Prepárate para intentarlo de nuevo!"
            android:textSize="20sp"
            android:layout_marginTop="16dp"
            android:textColor="#757575"
            app:layout_constraintBottom_toTopOf="@+id/btnComenzarRepaso"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloIntermedio" />

        <Button
            android:id="@+id/btnComenzarRepaso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Continuar"
            android:backgroundTint="@color/rojoBoton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubtituloIntermedio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resumen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f5f3"
        android:visibility="gone"
        android:elevation="21dp">

        <TextView
            android:id="@+id/textView_resumen_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="¡Juego Terminado!"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_trofeo_resumen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_trophy"
            app:tint="@color/rojoBoton"
            app:layout_constraintTop_toBottomOf="@id/textView_resumen_titulo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textView_resumen_aciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="@color/verde_correcto"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_trofeo_resumen"
            tools:text="Aciertos: 10" />

        <TextView
            android:id="@+id/textView_resumen_fallos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/rojo_incorrecto"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_resumen_aciertos"
            tools:text="Fallos: 2" />

        <TextView
            android:id="@+id/textViewResumenTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_resumen_fallos"
            tools:text="Tiempo: 01:23" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_jugar_de_nuevo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/rojoBoton"
            android:text="Volver a intentar"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button_salir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_salir"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="64dp"
            android:text="Salir al menú"
            android:textColor="@color/rojoBoton"
            android:textSize="16sp"
            app:strokeColor="@color/rojoBoton"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>