<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/rojoBoton"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/returnButton"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/rojoBoton"
            android:contentDescription="boton atras"
            android:srcCompat="@android:drawable/ic_menu_revert"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="PICTONOVOA"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Contenedor circular -->
    <FrameLayout
        android:id="@+id/circleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_constraintBottom_toBottomOf="parent">

        <!-- TextView central -->
        <!-- TextView central -->
        <TextView
            android:id="@+id/centerText"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="VOCAL"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#E35F72"
            android:padding="10dp"
            android:clipToOutline="true" />

        <!-- Consonantes alrededor -->
        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="B"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center" android:translationY="-200dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="C"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="100dp" android:translationY="-180dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="D"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="180dp" android:translationY="-100dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="F"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="200dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="G"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="180dp" android:translationY="100dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="H"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="100dp" android:translationY="180dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="J"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationY="200dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#E35F72"
            android:gravity="center"
            android:text="K"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="-100dp"
            android:translationY="180dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#E35F72"
            android:gravity="center"
            android:text="L"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="-180dp"
            android:translationY="100dp" />

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="M"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-200dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="N"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-180dp" android:translationY="-100dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="Ñ"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-100dp" android:translationY="-180dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="P"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="50dp" android:translationY="-220dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="Q"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="220dp" android:translationY="-50dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="R"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="220dp" android:translationY="50dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="S"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="50dp" android:translationY="220dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="T"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-50dp" android:translationY="220dp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="#E35F72"
            android:gravity="center"
            android:text="V"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="-220dp"
            android:translationY="50dp" />

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="W"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-220dp" android:translationY="-50dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="X"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="-150dp" android:translationY="-150dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="Y"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="150dp" android:translationY="150dp"/>

        <TextView android:layout_width="50dp" android:layout_height="50dp" android:text="Z"
            android:gravity="center" android:background="#E35F72" android:textColor="#FFFFFF"
            android:textStyle="bold" android:layout_gravity="center"
            android:translationX="0dp" android:translationY="-250dp"/>






        <!-- Puedes seguir así con las demás consonantes -->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
