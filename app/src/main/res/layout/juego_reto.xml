<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige"
    android:fitsSystemWindows="true"
    tools:context=".RetoActivity">

    <!-- AppBar (Toolbar) - Esto ya estaba bien -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E35F72"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            app:title="El Rosco"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Área de Input (Cajas de letras y botón) - Esto ya estaba bien -->
    <LinearLayout
        android:id="@+id/input_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@color/beige"
        android:elevation="4dp">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layoutLetterBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:justifyContent="center"
            app:alignItems="center"
            app:flexWrap="wrap"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonConfirmar"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Confirmar"
            android:textColor="#212121"
            android:textSize="24sp"
            app:backgroundTint="@color/option_button_background_color"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_check"
            app:iconSize="24sp"
            app:strokeColor="@color/option_button_stroke_color"
            app:strokeWidth="2dp"/>
    </LinearLayout>

    <!-- Contenido Principal (Scrollable) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="140dp"> <!-- Margen para dejar espacio al área de input -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- 1. LA IMAGEN (AHORA ARRIBA) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardImagenReto"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="25dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="4:3">

                <ImageView
                    android:id="@+id/imagenReto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Pictograma a completar"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_launcher_background" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabPlaySoundSilabas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="16dp"
                    android:contentDescription="Reproducir sonido de la palabra"
                    app:backgroundTint="@color/Mustard"
                    app:srcCompat="@drawable/ic_volume_up"
                    app:tint="@android:color/white" />
            </androidx.cardview.widget.CardView>

            <!-- 2. EL ROSCO DE LETRAS (AHORA DEBAJO DE LA IMAGEN) -->
            <GridLayout
                android:id="@+id/lettersGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:columnCount="7"
                android:alignmentMode="alignMargins"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/cardImagenReto"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Todos tus TextViews de letras aquí -->
                <TextView android:id="@+id/A" style="@style/LetraReto" android:text="A" />
                <TextView android:id="@+id/B" style="@style/LetraReto" android:text="B" />
                <TextView android:id="@+id/C" style="@style/LetraReto" android:text="C" />
                <TextView android:id="@+id/D" style="@style/LetraReto" android:text="D" />
                <TextView android:id="@+id/E" style="@style/LetraReto" android:text="E" />
                <TextView android:id="@+id/F" style="@style/LetraReto" android:text="F" />
                <TextView android:id="@+id/G" style="@style/LetraReto" android:text="G" />
                <TextView android:id="@+id/H" style="@style/LetraReto" android:text="H" />
                <TextView android:id="@+id/I" style="@style/LetraReto" android:text="I" />
                <TextView android:id="@+id/J" style="@style/LetraReto" android:text="J" />
                <TextView android:id="@+id/K" style="@style/LetraReto" android:text="K" />
                <TextView android:id="@+id/L" style="@style/LetraReto" android:text="L" />
                <TextView android:id="@+id/M" style="@style/LetraReto" android:text="M" />
                <TextView android:id="@+id/N" style="@style/LetraReto" android:text="N" />
                <TextView android:id="@+id/N_ene" style="@style/LetraReto" android:text="Ñ" />
                <TextView android:id="@+id/O" style="@style/LetraReto" android:text="O" />
                <TextView android:id="@+id/P" style="@style/LetraReto" android:text="P" />
                <TextView android:id="@+id/Q" style="@style/LetraReto" android:text="Q" />
                <TextView android:id="@+id/letraR" style="@style/LetraReto" android:text="R" />
                <TextView android:id="@+id/S" style="@style/LetraReto" android:text="S" />
                <TextView android:id="@+id/T" style="@style/LetraReto" android:text="T" />
                <TextView android:id="@+id/U" style="@style/LetraReto" android:text="U" />
                <TextView android:id="@+id/V" style="@style/LetraReto" android:text="V" />
                <TextView android:id="@+id/W" style="@style/LetraReto" android:text="W" />
                <TextView android:id="@+id/X" style="@style/LetraReto" android:text="X" />
                <TextView android:id="@+id/Y" style="@style/LetraReto" android:text="Y" />
                <TextView android:id="@+id/Z" style="@style/LetraReto" android:text="Z" />
            </GridLayout>

            <!-- El EditText invisible -->
            <EditText
                android:id="@+id/etHiddenInput"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/transparent"
                android:cursorVisible="false"
                android:inputType="textVisiblePassword"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:importantForAutofill="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- La vista del resumen del juego, superpuesta a todo. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resumen_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f8f5f3"
        android:visibility="gone"
        android:elevation="21dp">
        <!-- Aquí va todo el contenido de tu vista de resumen, que ya tenías bien -->
        <TextView
            android:id="@+id/textView_resumen_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="¡Juego Terminado!"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView_trofeo_resumen"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_trophy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_resumen_titulo"
            app:tint="@color/rojoBoton"
            android:contentDescription="Trofeo" />

        <TextView
            android:id="@+id/textView_resumen_aciertos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textColor="@color/verde_correcto"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_trofeo_resumen"
            tools:text="Aciertos: 10" />

        <TextView
            android:id="@+id/textView_resumen_fallos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@color/rojo_incorrecto"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_resumen_aciertos"
            tools:text="Fallos: 2" />

        <TextView
            android:id="@+id/textViewResumenTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_resumen_fallos"
            tools:text="Tiempo: 01:23" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_jugar_de_nuevo"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/rojoBoton"
            android:text="Volver a intentar"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button_salir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_salir"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginBottom="64dp"
            android:text="Salir al menú"
            android:textColor="@color/rojoBoton"
            android:textSize="16sp"
            app:strokeColor="@color/rojoBoton"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>



