<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojoBoton"
    tools:context=".MenuActivity">

    <!-- 1. Cabecera (TextView "PICTONOVA") -->
    <!-- Anclado a la parte superior de la pantalla -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:background="@color/rojoBoton"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="PICTONOVA"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 3. Pie de página (LinearLayout "LayoutBotones") -->
    <!-- Anclado a la parte inferior de la pantalla -->
    <LinearLayout
        android:id="@+id/LayoutBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:background="@color/rojoBoton"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="Iniciar Sesión" />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="Añadir pictogramas" />
    </LinearLayout>

    <!-- 2. Contenido Principal (TableLayout) -->
    <!-- Anclado para ocupar todo el espacio entre la cabecera y el pie de página -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        app:layout_constraintBottom_toTopOf="@id/LayoutBotones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >


    <!-- Las filas interiores usan 'layout_weight' para distribuirse el espacio verticalmente -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Imagen modo palabras"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person" />

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/CherryBlossomPink"
                android:text="Palabra"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="101dp"
                android:layout_height="120dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Imagen modo palabras"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_person" />

            <Button
                android:id="@+id/buttonSilabas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:backgroundTint="@color/rojoBoton"
                android:text="Sílabas"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
