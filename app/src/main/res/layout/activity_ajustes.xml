<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AjustesActivity">

    <!-- 1. BARRA DE HERRAMIENTAS (Toolbar) -->
    <!-- Esencial para la navegación y el título. Permite volver atrás. -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAjustes"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/rojoBoton"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Ajustes" />

    <!-- 2. CONTENEDOR DE LAS OPCIONES DE AJUSTES -->
    <!-- Usamos un LinearLayout para apilar las opciones verticalmente. -->
    <LinearLayout
        android:id="@+id/settingsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#f8f5f3"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarAjustes">

        <!-- ===== AJUSTE 1: VOLUMEN DE SONIDO ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CherryBlossomPink"
            android:backgroundTint="@color/CherryBlossomPink"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_volume_up" /> <!-- Asegúrate de tener este icono en /drawable -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Volumen"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekbarVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="75"
                android:progressTint="#f8f5f3" />
        </LinearLayout>

        <!-- Divisor para separar las opciones -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="?android:attr/listDivider" />

        <!-- ===== AJUSTE 2: IDIOMA ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/CherryBlossomPink"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:importantForAccessibility="no"
                android:src="@drawable/ic_language" /> <!-- Asegúrate de tener este icono en /drawable -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idioma"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textviewCurrentLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Español"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Un Spinner es ideal para seleccionar entre varias opciones -->
            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="wrap_content"
                android:layout_height="65dp" />
        </LinearLayout>

        <!-- Divisor -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="?android:attr/listDivider" />

        <!-- Aquí puedes añadir más opciones en el futuro siguiendo el mismo patrón -->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
