<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/beige"
    android:fitsSystemWindows="true">

    <!-- ========================================================== -->
    <!-- ========= INICIO DE LA SECCIÓN MODIFICADA ================ -->
    <!-- ========================================================== -->

    <!-- 1. Imagen de Cabecera Horizontal -->
    <!-- Reemplaza el logo y los textos de bienvenida -->
    <ImageView
        android:id="@+id/header_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layerType="software"
        android:contentDescription="Título de la aplicación"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/pictonova_rojo_sin_fondo"
        app:layout_constraintDimensionRatio="H,16:8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="#FFFFFF" />
    <!-- tools:background es solo para la vista previa -->

    <!-- Contenedor para el resto de los elementos, con un margen superior -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_image">

        <!-- ========================================================== -->
        <!-- ========= FIN DE LA SECCIÓN MODIFICADA =================== -->
        <!-- ========================================================== -->


        <!-- 2. Campo de Texto para el Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldEmail"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/ic_email"
            app:boxStrokeColor="@color/gris_contraste"
            app:hintTextColor="@color/gris_contraste">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- 3. Campo de Texto para la Contraseña -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textFieldPassword"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Contraseña"
            app:endIconMode="password_toggle"
            app:layout_constraintTop_toBottomOf="@id/textFieldEmail"
            app:startIconDrawable="@drawable/ic_lock"
            app:boxStrokeColor="@color/gris_contraste"
            app:hintTextColor="@color/gris_contraste">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>


        <!-- 4. Enlace para Olvidé mi Contraseña -->
        <TextView
            android:id="@+id/textViewForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="¿Olvidaste tu contraseña?"
            android:textColor="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textFieldPassword" />

        <TextView
            android:id="@+id/textEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/design_default_color_error"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewForgotPassword"
            tools:text="Error: La contraseña es incorrecta."
            tools:visibility="invisible" />


        <!-- 5. Botón Principal de Ingreso -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:text="Ingresar"
            android:textSize="24sp"
            android:backgroundTint="@color/rojoBoton"
            app:cornerRadius="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewForgotPassword" />


        <!-- 8. Texto para Crear Cuenta (en la parte inferior) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿No tienes una cuenta?" />

            <TextView
                android:id="@+id/textViewGoToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Regístrate"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


