<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f5f3"
    tools:context=".JuegoPalabras">

    <!--
    ============================================================
    1. HEADER DEL JUEGO
    ============================================================
    -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E35F72"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Adivina la palabra"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBarGame"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:progress="3"
        android:progressTint="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" /> <!-- La imagen empieza en el 15% de la pantalla -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_image_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" /> <!-- La imagen termina en el 55% de la pantalla -->

    <!--
    ============================================================
    ÁREA DEL PICTOGRAMA (IMAGEN) - SECCIÓN MODIFICADA
    ============================================================
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPictogram"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"

        app:layout_constraintTop_toTopOf="@id/guideline_image_top"
        app:layout_constraintBottom_toBottomOf="@id/guideline_image_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <!-- El contenido de la CardView (ConstraintLayout, ImageView y FAB) no cambia -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewPictogram"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlaySound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:backgroundTint="#FFC107"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic_volume_up"
                app:fabSize="mini"
                app:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Guideline para separar la imagen de los botones -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" /> <!-- El "suelo" está al 95% de la altura -->


    <!-- BOTÓN DE CONFIRMAR - AHORA ANCLADO A LA GUIDELINE -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonConfirm"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:enabled="false"
        android:text="CONFIRMAR"
        android:textColor="@color/rojoBoton"
        android:textSize="16sp"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/black"
        app:strokeColor="@color/black"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom_anchor" />


    <!-- GRUPO DE BOTONES DE OPCIÓN - SIN CAMBIOS (se mueve automáticamente) -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroupOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/buttonConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:selectionRequired="true"
        app:backgroundTint="@color/Mustard"
        app:singleSelection="true">

        <!-- ... Tus 3 botones de opción ... -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción A"
            android:textColor="#212121"
            android:textSize="18sp"
            app:backgroundTint="@color/option_button_background_color"
            app:cornerRadius="16dp"
            app:strokeColor="@color/option_button_stroke_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption2"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción B"
            android:textColor="#212121"
            android:textSize="18sp"
            app:backgroundTint="@color/option_button_background_color"
            app:cornerRadius="16dp"
            app:strokeColor="@color/option_button_stroke_color"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption3"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción C"
            android:textColor="#212121"
            android:textSize="18sp"
            app:backgroundTint="@color/option_button_background_color"
            app:cornerRadius="16dp"
            app:strokeColor="@color/option_button_stroke_color"
            app:strokeWidth="2dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
