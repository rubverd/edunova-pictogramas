<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7A6AE"
    tools:context=".JuegoPalabras">

    <!--
    ============================================================
    1. HEADER DEL JUEGO
    ============================================================
    -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E35F72"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Adivina la palabra"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <ProgressBar
        android:id="@+id/progressBarGame"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:indeterminate="false"
        android:max="10"
        android:progress="3"
        android:progressTint="#FFC107"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!--
    ============================================================
    2. ÁREA DEL PICTOGRAMA (IMAGEN)
    ============================================================
    -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPictogram"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/progressBarGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_options">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewPictogram"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!--
            ESTE ES EL NUEVO BOTÓN DE SONIDO
            Es un FloatingActionButton (FAB) de tamaño mini.
            -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabPlaySound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:backgroundTint="#FFC107"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic_volume_up"
                app:fabSize="mini"
                app:elevation="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Guideline para separar la imagen de los botones -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7017784" />

    <!--
    ============================================================
    3. ÁREA DE OPCIONES (BOTONES)
    ============================================================
    -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="@id/guideline_options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- BOTÓN DE OPCIÓN 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción A"
            android:textSize="18sp"
            android:textColor="#212121"
            app:backgroundTint="#F0F0F0"
            app:cornerRadius="16dp"
            app:strokeColor="#FFC107"
            app:strokeWidth="2dp" />

        <!-- BOTÓN DE OPCIÓN 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción B"
            android:textSize="18sp"
            android:textColor="#212121"
            app:backgroundTint="#F0F0F0"
            app:cornerRadius="16dp"
            app:strokeColor="#FFC107"
            app:strokeWidth="2dp" />

        <!-- BOTÓN DE OPCIÓN 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="Opción C"
            android:textSize="18sp"
            android:textColor="#212121"
            app:backgroundTint="#F0F0F0"
            app:cornerRadius="16dp"
            app:strokeColor="#FFC107"
            app:strokeWidth="2dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
