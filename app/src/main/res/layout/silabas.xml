<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/beige"
tools:context=".SilabasActivity">

<!-- 1. Barra superior -->
<com.google.android.material.appbar.AppBarLayout
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E35F72"
    app:elevation="0dp"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Completa las sílabas"
        app:titleTextColor="@color/white" />

</com.google.android.material.appbar.AppBarLayout>

<!-- 2. Contenedor para los elementos del JUEGO (se podrá ocultar/mostrar) -->
<androidx.constraintlayout.widget.Group
    android:id="@+id/game_content_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:constraint_referenced_ids="consonantsGrid,silabas_container,respuesta_layout,buttonOption3"
    />

<!-- Grid de consonantes -->
<GridLayout
    android:id="@+id/consonantsGrid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:alignmentMode="alignMargins"
    android:columnCount="5"
    android:gravity="center"
    android:rowCount="5"
    android:rowOrderPreserved="false"
    android:useDefaultMargins="true"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/appBarLayout">
    <!-- Todos los TextView de las letras van aquí (sin cambios) -->
    <TextView android:id="@+id/B" style="@style/LetraConsonante" android:text="B" />
    <TextView android:id="@+id/C" style="@style/LetraConsonante" android:text="C" />
    <TextView android:id="@+id/D" style="@style/LetraConsonante" android:text="D" />
    <TextView android:id="@+id/F" style="@style/LetraConsonante" android:text="F" />
    <TextView android:id="@+id/G" style="@style/LetraConsonante" android:text="G" />
    <TextView android:id="@+id/H" style="@style/LetraConsonante" android:text="H" />
    <TextView android:id="@+id/J" style="@style/LetraConsonante" android:text="J" />
    <TextView android:id="@+id/K" style="@style/LetraConsonante" android:text="K" />
    <TextView android:id="@+id/L" style="@style/LetraConsonante" android:text="L" />
    <TextView android:id="@+id/M" style="@style/LetraConsonante" android:text="M" />
    <TextView android:id="@+id/N" style="@style/LetraConsonante" android:text="N" />
    <TextView android:id="@+id/N_ene" style="@style/LetraConsonante" android:text="Ñ" />
    <TextView android:id="@+id/P" style="@style/LetraConsonante" android:text="P" />
    <TextView android:id="@+id/Q" style="@style/LetraConsonante" android:text="Q" />
    <TextView android:id="@+id/letraR" style="@style/LetraConsonante" android:text="R" />
    <TextView android:id="@+id/S" style="@style/LetraConsonante" android:text="S" />
    <TextView android:id="@+id/T" style="@style/LetraConsonante" android:text="T" />
    <TextView android:id="@+id/V" style="@style/LetraConsonante" android:text="V" />
    <TextView android:id="@+id/W" style="@style/LetraConsonante" android:text="W" />
    <TextView android:id="@+id/X" style="@style/LetraConsonante" android:text="X" />
    <TextView android:id="@+id/Y" style="@style/LetraConsonante" android:text="Y" />
    <TextView android:id="@+id/Z" style="@style/LetraConsonante" android:text="Z" />
</GridLayout>

<!-- Contenedor para el TextView de la sílaba y el botón de sonido -->
<LinearLayout
    android:id="@+id/silabas_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="16dp"
    android:background="@color/CherryBlossomPink"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/consonantsGrid">

    <TextView
        android:id="@+id/TextoSilabas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="Ba" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlaySoundSilabas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="Reproducir sonido de la sílaba"
        app:backgroundTint="@color/Mustard"
        app:srcCompat="@drawable/ic_volume_up"
        app:tint="@android:color/white" />
</LinearLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/respuesta_layout"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/silabas_container">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/respuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Escribe tu respuesta"
        android:enabled="false"
        android:inputType="text" />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.button.MaterialButton
    android:id="@+id/buttonOption3"
    style="?attr/materialButtonOutlinedStyle"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:text="Confirmar"
    android:textColor="#212121"
    android:textSize="18sp"
    app:backgroundTint="@color/option_button_background_color"
    app:cornerRadius="16dp"
    app:icon="@drawable/ic_check"
    app:strokeColor="@color/option_button_stroke_color"
    app:strokeWidth="2dp"
    app:layout_constraintTop_toBottomOf="@id/respuesta_layout"
    app:layout_constraintStart_toStartOf="@id/respuesta_layout"
    app:layout_constraintEnd_toEndOf="@id/respuesta_layout"/>


<!-- 3. Contenedor para el RESUMEN (solapado encima, oculto por defecto) -->
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/resumen_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="?android:colorBackground"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textView_resumen_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="¡Juego Terminado!"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_trofeo_resumen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_trophy"
        app:tint="@color/rojoBoton"
        app:layout_constraintTop_toBottomOf="@id/textView_resumen_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></ImageView>

    <TextView

        android:id="@+id/textView_resumen_aciertos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textColor="@color/verde_correcto"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_trofeo_resumen"
        tools:text="Aciertos: 10" />

    <TextView
        android:id="@+id/textView_resumen_fallos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/rojo_incorrecto"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_resumen_aciertos"
        tools:text="Fallos: 2" />

    <Button
        android:id="@+id/button_jugar_de_nuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:textSize="18sp"
        android:paddingTop="12dp"
        android:backgroundTint="@color/rojoBoton"
        android:text="Jugar de Nuevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
