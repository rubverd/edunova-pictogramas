<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor general -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Barra superior -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E35F72"
            app:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Completa las sílabas"
                app:titleTextColor="@color/white"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beige"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Grid de consonantes -->
            <GridLayout
                android:id="@+id/consonantsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="5"
                android:gravity="center"
                android:rowCount="5"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true">

                <!-- Cada TextView representa una consonante -->
                <TextView
                    android:id="@+id/B"
                    style="@style/LetraConsonante"
                    android:text="B" />

                <TextView
                    android:id="@+id/C"
                    style="@style/LetraConsonante"
                    android:text="C" />

                <TextView
                    android:id="@+id/D"
                    style="@style/LetraConsonante"
                    android:text="D" />

                <TextView
                    android:id="@+id/F"
                    style="@style/LetraConsonante"
                    android:text="F" />

                <TextView
                    android:id="@+id/G"
                    style="@style/LetraConsonante"
                    android:text="G" />

                <TextView
                    android:id="@+id/H"
                    style="@style/LetraConsonante"
                    android:text="H" />

                <TextView
                    android:id="@+id/J"
                    style="@style/LetraConsonante"
                    android:text="J" />

                <TextView
                    android:id="@+id/K"
                    style="@style/LetraConsonante"
                    android:text="K" />

                <TextView
                    android:id="@+id/L"
                    style="@style/LetraConsonante"
                    android:text="L" />

                <TextView
                    android:id="@+id/M"
                    style="@style/LetraConsonante"
                    android:text="M" />

                <TextView
                    android:id="@+id/N"
                    style="@style/LetraConsonante"
                    android:text="N" />

                <TextView
                    android:id="@+id/N_ene"
                    style="@style/LetraConsonante"
                    android:text="Ñ" />

                <TextView
                    android:id="@+id/P"
                    style="@style/LetraConsonante"
                    android:text="P" />

                <TextView
                    android:id="@+id/Q"
                    style="@style/LetraConsonante"
                    android:text="Q" />

                <TextView
                    android:id="@+id/letraR"
                    style="@style/LetraConsonante"
                    android:text="R" />

                <TextView
                    android:id="@+id/S"
                    style="@style/LetraConsonante"
                    android:text="S" />

                <TextView
                    android:id="@+id/T"
                    style="@style/LetraConsonante"
                    android:text="T" />

                <TextView
                    android:id="@+id/V"
                    style="@style/LetraConsonante"
                    android:text="V" />

                <TextView
                    android:id="@+id/W"
                    style="@style/LetraConsonante"
                    android:text="W" />

                <TextView
                    android:id="@+id/X"
                    style="@style/LetraConsonante"
                    android:text="X" />

                <TextView
                    android:id="@+id/Y"
                    style="@style/LetraConsonante"
                    android:text="Y" />

                <TextView
                    android:id="@+id/Z"
                    style="@style/LetraConsonante"
                    android:text="Z" />
            </GridLayout>

            <!-- TextView grande debajo del grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/CherryBlossomPink"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TextoSilabas"
                    android:layout_width="292dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="Texto Grande"
                    android:textColor="@color/white"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabPlaySoundSilabas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Reproducir sonido de la sílaba"
                    app:backgroundTint="@color/Mustard"
                    app:srcCompat="@drawable/ic_volume_up"
                    app:tint="@android:color/white" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/respuesta_layout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/respuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="Escribe tu respuesta"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonOption3"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Confirmar"
                android:textColor="#212121"
                android:textSize="18sp"
                app:backgroundTint="@color/option_button_background_color"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_check"
                app:strokeColor="@color/option_button_stroke_color"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
