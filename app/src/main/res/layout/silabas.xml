<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor general -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Barra superior -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/rojoBoton"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/returnButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/rojoBoton"
                android:contentDescription="boton atras"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_menu_revert" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/rojoBoton"
                android:text="PICTONOVOA"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Contenido principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <!-- Grid de consonantes -->
            <GridLayout
                android:id="@+id/consonantsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="5"
                android:rowCount="5"
                android:rowOrderPreserved="false"
                android:useDefaultMargins="true"
                android:gravity="center">

                <!-- Cada TextView representa una consonante -->
                <TextView
                    android:id="@+id/B"
                    style="@style/LetraConsonante"
                    android:text="B" />

                <TextView
                    android:id="@+id/C"
                    style="@style/LetraConsonante"
                    android:text="C" />

                <TextView
                    android:id="@+id/D"
                    style="@style/LetraConsonante"
                    android:text="D" />

                <TextView
                    android:id="@+id/F"
                    style="@style/LetraConsonante"
                    android:text="F" />

                <TextView
                    android:id="@+id/G"
                    style="@style/LetraConsonante"
                    android:text="G" />

                <TextView
                    android:id="@+id/H"
                    style="@style/LetraConsonante"
                    android:text="H" />

                <TextView
                    android:id="@+id/J"
                    style="@style/LetraConsonante"
                    android:text="J" />

                <TextView
                    android:id="@+id/K"
                    style="@style/LetraConsonante"
                    android:text="K" />

                <TextView
                    android:id="@+id/L"
                    style="@style/LetraConsonante"
                    android:text="L" />

                <TextView
                    android:id="@+id/M"
                    style="@style/LetraConsonante"
                    android:text="M" />

                <TextView
                    android:id="@+id/N"
                    style="@style/LetraConsonante"
                    android:text="N" />

                <TextView
                    android:id="@+id/Ñ"
                    style="@style/LetraConsonante"
                    android:text="Ñ" />

                <TextView
                    android:id="@+id/P"
                    style="@style/LetraConsonante"
                    android:text="P" />

                <TextView
                    android:id="@+id/Q"
                    style="@style/LetraConsonante"
                    android:text="Q" />

                <TextView
                    android:id="@+id/R"
                    style="@style/LetraConsonante"
                    android:text="R" />

                <TextView
                    android:id="@+id/S"
                    style="@style/LetraConsonante"
                    android:text="S" />

                <TextView
                    android:id="@+id/T"
                    style="@style/LetraConsonante"
                    android:text="T" />

                <TextView
                    android:id="@+id/V"
                    style="@style/LetraConsonante"
                    android:text="V" />

                <TextView
                    android:id="@+id/W"
                    style="@style/LetraConsonante"
                    android:text="W" />

                <TextView
                    android:id="@+id/X"
                    style="@style/LetraConsonante"
                    android:text="X" />

                <TextView
                    android:id="@+id/Y"
                    style="@style/LetraConsonante"
                    android:text="Y" />

                <TextView
                    android:id="@+id/Z"
                    style="@style/LetraConsonante"
                    android:text="Z" />
            </GridLayout>

            <!-- TextView grande debajo del grid -->
            <TextView
                android:id="@+id/bigTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Texto Grande"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#E35F72"
                android:padding="16dp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
