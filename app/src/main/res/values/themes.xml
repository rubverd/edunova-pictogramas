<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Edunova" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores originales de tu marca para el modo claro -->
        <item name="colorPrimary">@color/rojoBoton</item>
        <item name="colorOnBackground">#f8f5f3</item> <!-- El fondo beige que tenías -->

        <!-- AQUÍ ASIGNAMOS TUS COLORES ORIGINALES A NUESTROS ATRIBUTOS PERSONALIZADOS -->
        <item name="customCardBackgroundColor">@color/CherryBlossomPink</item> <!-- Tu rosa claro original -->
        <item name="customTextColor">@android:color/black</item> <!-- Texto negro -->
        <item name="customTextSecondaryColor">@android:color/darker_gray</item> <!-- Texto gris oscuro -->
        <item name="customIconColor">@android:color/black</item> <!-- Iconos negros -->

    </style>


    <style name="Theme.Edunova" parent="Base.Theme.Edunova" />
    <style name="LetraReto" parent="LetraConsonante">
        <!-- Reducimos el tamaño de cada celda de letra -->
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <!-- Reducimos el tamaño del texto dentro de la celda -->
        <item name="android:textSize">18sp</item>
    </style>
</resources>